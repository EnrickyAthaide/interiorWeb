    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Register ScrollTrigger plugin
            gsap.registerPlugin(ScrollTrigger);
            
            // Remove cursor follow effect from inline script as it's handled in about.js
            
            // Hero parallax effect
            gsap.to('.parallax-bg', {
                yPercent: 30,
                ease: "none",
                scrollTrigger: {
                    trigger: '.hero',
                    start: 'top top',
                    end: 'bottom top',
                    scrub: 1
                }
            });
            
            // Scroll progress indicator
            gsap.to('.scroll-progress', {
                width: '100%',
                ease: 'none',
                scrollTrigger: {
                    trigger: 'body',
                    start: 'top top',
                    end: 'bottom bottom',
                    scrub: 0.3
                }
            });
            
            // Section header animations
            gsap.utils.toArray('.section-header').forEach(header => {
                gsap.from(header.children, {
                    y: 50,
                    opacity: 0,
                    duration: 1,
                    stagger: 0.2,
                    scrollTrigger: {
                        trigger: header,
                        start: 'top 80%'
                    }
                });
            });
            
            // Image reveal animations
            gsap.utils.toArray('.image-reveal').forEach(reveal => {
                gsap.from(reveal, {
                    clipPath: 'inset(0 100% 0 0)',
                    duration: 1,
                    scrollTrigger: {
                        trigger: reveal,
                        start: 'top 80%'
                    }
                });
            });
            
            // Philosophy cards 3D effect
            document.querySelectorAll('.philosophy-card').forEach(card => {
                card.addEventListener('mousemove', (e) => {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotationY = ((x - centerX) / centerX) * 10;
                    const rotationX = ((centerY - y) / centerY) * 10;
                    
                    gsap.to(card, {
                        rotationX: rotationX,
                        rotationY: rotationY,
                        duration: 0.5,
                        ease: 'power2.out',
                        transformPerspective: 1000
                    });
                });
                
                card.addEventListener('mouseleave', () => {
                    gsap.to(card, {
                        rotationX: 0,
                        rotationY: 0,
                        duration: 0.5,
                        ease: 'power2.out'
                    });
                });
            });
            
            // Timeline animation
            gsap.to('.timeline-progress', {
                height: '100%',
                ease: 'none',
                scrollTrigger: {
                    trigger: '.timeline',
                    start: 'top 80%',
                    end: 'bottom 20%',
                    scrub: 0.3
                }
            });
            
            gsap.utils.toArray('.timeline-item').forEach(item => {
                gsap.from(item, {
                    opacity: 0,
                    x: -50,
                    duration: 1,
                    scrollTrigger: {
                        trigger: item,
                        start: 'top 80%',
                        toggleActions: 'play none none reverse'
                    }
                });
            });
            
            // Expertise items parallax
            gsap.utils.toArray('.expertise-item').forEach(item => {
                const depth = item.getAttribute('data-depth');
                gsap.to(item, {
                    y: -50 * depth,
                    ease: 'none',
                    scrollTrigger: {
                        trigger: '.expertise-section',
                        start: 'top bottom',
                        end: 'bottom top',
                        scrub: true
                    }
                });
            });
            
            // Parallax layers in expertise section
            gsap.utils.toArray('.layer').forEach(layer => {
                const depth = layer.getAttribute('data-depth');
                gsap.to(layer, {
                    y: -100 * depth,
                    ease: 'none',
                    scrollTrigger: {
                        trigger: '.expertise-section',
                        start: 'top bottom',
                        end: 'bottom top',
                        scrub: true
                    }
                });
            });
            
            // Quote reveal animation
            gsap.from('.reveal-quote p, .reveal-quote cite', {
                y: 50,
                opacity: 0,
                duration: 1,
                stagger: 0.3,
                scrollTrigger: {
                    trigger: '.quote-section',
                    start: 'top 70%'
                }
            });
            
            // Glitch effect for hero title
            const glitchElement = document.querySelector('.glitch-effect');
            if (glitchElement) {
                setInterval(() => {
                    glitchElement.classList.add('active');
                    setTimeout(() => {
                        glitchElement.classList.remove('active');
                    }, 200);
                }, 3000);
            }

            // Vision stats animation
            gsap.from('.vision-stats .stat', {
                y: 30,
                opacity: 0,
                stagger: 0.2,
                duration: 0.8,
                scrollTrigger: {
                    trigger: '.vision-stats',
                    start: 'top 80%'
                }
            });
        });
    </script>
