<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= projectName %> | Luxury Interior Design Project</title>
    <link rel="stylesheet" href="/stylesheets/project-detail.css">
</head>

<body>
    <!-- Header -->
    <header class="site-header">
        <div class="left-header">
            <a href="/" class="header-text">INTERIOR DESIGN &<br>ARCHITECTURE STUDIO</a>
        </div>
        <div class="center-header">
            <a href="/" class="logo">
                <img src="/images/logo.png" alt="Studio Logo" class="logo-img">
            </a>
        </div>
        <div class="right-header">
            <nav>
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/about">ABOUT</a></li>
                    <li class="active"><a href="/projects">PROJECTS</a></li>
                    <li><a href="/blogs">JOURNAL</a></li>
                    <li><a href="/contact">CONTACT</a></li>
                    <li><a href="/press">PRESS</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="project-title">
                <%= projectName.toUpperCase().replace(' ', '<br>') %>
            </h1>
        </div>
        <div class="hero-background">
            <div class="parallax-image" style="background-image: url('<%= projectImages[0] %>');"></div>
        </div>
    </section>
    
    <!-- Project Overview Section -->
    <section class="project-overview" id="textAni1">
        <div class="project-overview-content" id="content1">
            <div class="large-title" id="headAni1">
                <% 
                const subtitleWords = projectSubtitle.split(' ');
                subtitleWords.forEach(word => { 
                %>
                <h2><%= word.toUpperCase() %></h2>
                <% }); %>
            </div>
            <div class="project-description" id="parAni1">
                <% 
                const descriptionSentences = projectDescription.split('.');
                descriptionSentences.forEach(sentence => { 
                    if(sentence.trim().length > 0) {
                %>
                <p><%= sentence.trim() %>.</p>
                <% }
                }); %>
            </div>
        </div>
    </section>
    
    <!-- Dual Image Section -->
    <section class="dual-image-section " id="ani1">
        <div class="image-container left" id="left1">
            <img src="<%= projectImages[1] || 'https://images.unsplash.com/photo-1591088398332-8a7791972843?q=80&w=1000' %>" alt="<%= projectName %> detail view">
        </div>
        <div class="image-container right" id="right1">
            <img src="<%= projectImages[2] || 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?q=80&w=1000' %>" alt="<%= projectName %> interior view">
        </div>
    </section>
    
    <section class="gallery-section">
        <div class="gallery-image"><img src="<%= projectImages[3] || projectImages[0] %>" alt="Gallery image of <%= projectName %>"></div>
    </section>
    
    <!-- Additional Text Section -->
    <section style="background-color: #FAF9F6;" class="project-overview" id="textAni2">
        <div class="project-overview-content" style="color: black;" id="content2">
            <div class="large-title" id="headAni2">
                <h2>DESIGN</h2>
                <h2>AND</h2>
                <h2>CRAFTSMANSHIP</h2>
            </div>
            <div class="project-description2" id="parAni2">
                <p>Our design philosophy for this project centered around creating</p>
                <p>a space that feels both timeless and contemporary. Every detail,</p>
                <p>from the custom joinery to the curated materials palette,</p>
                <p>contributes to the cohesive design language throughout.</p>
            </div>
        </div>
    </section>

    <!-- Additional Dual Image Section -->
    <section style="background-color: #FAF9F6; height:200vh;" class="dual-image-section" id="ani2">
        <div class="image-container left" id="left2">
            <img src="<%= projectImages[4] || 'https://images.unsplash.com/photo-1591088398332-8a7791972843?q=80&w=1000' %>" alt="<%= projectName %> design detail">
        </div>
        <div class="image-container right" id="right2">
            <img src="<%= projectImages[5] || 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?q=80&w=1000' %>" alt="<%= projectName %> craftsmanship detail">
        </div>
    </section>

    <!-- Next Project Section -->
    <section class="next-project-section">
        <div class="next-project-wrapper">
            <div class="next-project-label">NEXT PROJECT</div>
            <h3 class="next-project-title"><%= nextProject.name %></h3>
            <p class="next-project-description"><%= nextProject.description %></p>
            <a href="<%= nextProject.link %>" class="next-project-link">VIEW PROJECT</a>
        </div>
    </section>

    <!-- Scripts at bottom -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.19/bundled/lenis.min.js"></script>
    <script src="/javascripts/project-details.js"></script>
</body>
</html>