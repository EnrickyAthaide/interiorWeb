    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <div class="section-header">
                <span class="section-number">01</span>
                <h2>Get In Touch</h2>
                <div class="separator"></div>
                <p>Our design experts are ready to bring your vision to life. Share your ideas and let's create something extraordinary together.</p>
            </div>
            
            <div class="contact-wrapper">
                <!-- Form Side -->
                <div class="contact-form-side slide-in-left" id="contact-form-section">
                    <form id="contact-form">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" name="name" placeholder="Your name" required>
                            <span id="name-validation" class="validation-message"></span>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" id="email" name="email" placeholder="Your email" required>
                                <span id="email-validation" class="validation-message"></span>
                            </div>
                            
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" name="phone" placeholder="Your phone (optional)">
                                <span id="phone-validation" class="validation-message"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="service">Service of Interest</label>
                            <select id="service" name="service" required>
                                <option value="" selected disabled>Select a service</option>
                                <option value="residential">Residential Design</option>
                                <option value="commercial">Commercial Design</option>
                                <option value="consultation">Design Consultation</option>
                                <option value="renovation">Renovation</option>
                                <option value="other">Other Services</option>
                            </select>
                            <span id="service-validation" class="validation-message"></span>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Your Message</label>
                            <textarea id="message" name="message" rows="4" placeholder="Tell us about your project" required></textarea>
                            <span id="message-validation" class="validation-message"></span>
                        </div>
                        
                        <button type="submit" class="submit-btn">
                            <span>Send Message</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </form>
                    
                    <div class="success-message">
                        <i class="fas fa-check-circle"></i>
                        <h3>Thank you for your message!</h3>
                        <p>We appreciate your interest in Ultra Interiors. One of our design consultants will be in touch with you shortly.</p>
                    </div>
                </div>
                
                <!-- Info Side -->
                <div class="contact-info-side slide-in-right">
                    <div class="info-card">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="info-content">
