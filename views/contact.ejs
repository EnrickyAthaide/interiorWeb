    <!-- Remove any circular elements -->
    <style>
        body:after, 
        footer:after, 
        .main-footer:after,
        .back-to-top:after,
        .footer-bottom:after {
            display: none !important;
            content: none !important;
            visibility: hidden !important;
            opacity: 0 !important;
        }
        
        /* Hide any fixed position elements in the corner */
        [style*="position: fixed"][style*="bottom"][style*="right"],
        [style*="position:fixed"][style*="bottom"][style*="right"] {
            display: none !important;
            visibility: hidden !important;
        }
    </style>
    
    <!-- Script to find and remove the brown dot -->
    <script>
        // Wait for the page to fully load
        window.addEventListener('load', function() {
            // First attempt: Remove any div that's a direct child of body and has position:fixed
            const removeUnwantedElements = function() {
                // Get all direct children of body
                const bodyChildren = document.body.children;
                
                // Check each element
                for (let i = 0; i < bodyChildren.length; i++) {
                    const element = bodyChildren[i];
                    
                    // Skip essential elements
                    if (element.classList.contains('back-to-top') || 
                        element.classList.contains('scroll-progress-container') ||
                        element.classList.contains('cursor-follow') ||
                        element.tagName === 'SCRIPT' ||
                        element.tagName === 'STYLE') {
                        continue;
                    }
                    
                    // Check if it's positioned fixed and in the bottom right
                    const style = window.getComputedStyle(element);
                    if (style.position === 'fixed' && 
                        (style.bottom === '0px' || parseInt(style.bottom) > 0) && 
                        (style.right === '0px' || parseInt(style.right) > 0)) {
                        // Remove the element if it's likely the brown dot
                        element.remove();
                    }
                }
            };
            
            // Run immediately
            removeUnwantedElements();
            
            // Also run when scrolling starts
            window.addEventListener('scroll', function() {
                // Use requestAnimationFrame to avoid performance issues
                requestAnimationFrame(removeUnwantedElements);
            }, { passive: true });
            
            // Run every second as a fallback
            setInterval(removeUnwantedElements, 1000);
        });
    </script>
