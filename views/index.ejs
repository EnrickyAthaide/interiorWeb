<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Raleway:wght@300;400;500;600&display=swap">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/footer.css">
</head>
<body class="dark-theme">
  <!-- Custom Cursor -->
  <div class="cursor"></div>
  <div class="cursor-follower"></div>
  
  <!-- Scroll Progress Indicator -->
  <div class="scroll-progress"></div>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <span class="hero-subtitle reveal-text">Interior Design Excellence</span>
        <h1 class="hero-title split-text">Transforming Spaces<br>Into Experiences</h1>
        <p class="hero-description">Luxury interior design solutions crafted with precision and passion</p>
        <a href="#projects" class="hero-cta">
          <span>Explore Our Portfolio</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>
    <div class="hero-background">
      <div class="youtube-container" id="youtube-container">
        <!-- YouTube iframe will be inserted here via JavaScript -->
      </div>
      <div class="video-overlay"></div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section id="projects" class="featured-projects">
    <div class="container">
      <div class="section-header">
        <span class="section-number">01</span>
        <h2>Curated Projects</h2>
        <div class="section-line"></div>
      </div>
      
      <div class="project-gallery">
        <% projects.forEach(function(project, index) { %>
          <div class="project-item" data-index="<%= index %>">
            <div class="project-image">
              <img src="<%= project.image %>" alt="<%= project.name %>">
            </div>
            <div class="project-overlay">
              <div class="project-info">
                <h3><%= project.name %></h3>
                <p><%= project.category %> | <%= project.year %></p>
                <a href="/projects/<%= project.name.toLowerCase().replace(/\s+/g, '-') %>" class="view-project">View Project</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="section-header right-aligned">
        <span class="section-number">02</span>
        <h2>Our Atelier</h2>
        <div class="section-line"></div>
      </div>
      
      <div class="about-content">
        <div class="about-text">
          <h3 class="about-heading">About Essajee's Atelier</h3>
          <p class="about-description">
            Essajee's Atelier is a boutique design studio specializing in creating bespoke 
            interiors that blend timeless elegance with modern functionality. With over two 
            decades of experience, we transform spaces into captivating environments that 
            reflect our clients' unique personalities and lifestyles.
          </p>
          <div class="about-stats">
            <div class="stat-item">
              <span class="stat-number" data-count="20">0</span><span class="stat-plus">+</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat-item">
              <span class="stat-number" data-count="150">0</span><span class="stat-plus">+</span>
              <span class="stat-label">Projects Completed</span>
            </div>
            <div class="stat-item">
              <span class="stat-number" data-count="12">0</span>
              <span class="stat-label">International Awards</span>
            </div>
          </div>
        </div>
        <div class="about-image">
          <div class="image-container">
            <img src="<%= about.image %>" alt="About Essajee's Atelier">
            <div class="image-overlay"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Seamless Experience Section -->
  <section id="seamless" class="seamless-section">
    <div class="container">
      <div class="section-header centered">
        <span class="section-number">03</span>
        <h2>A Seamless Experience</h2>
        <div class="section-line"></div>
      </div>
      
      <div class="seamless-container">
        <div class="transformation-wrapper">
          <div class="transformation-card">
            <div class="transformation-side before-side">
              <img src="<%= seamless.before %>" alt="Before">
              <div class="transformation-overlay">
                <span class="transformation-label">Before</span>
              </div>
            </div>
            <div class="transformation-side after-side">
              <img src="<%= seamless.after %>" alt="After">
              <div class="transformation-overlay">
                <span class="transformation-label">After</span>
              </div>
            </div>
          </div>
          <div class="transformation-controls">
            <button class="control-btn active" data-view="split">Split View</button>
            <button class="control-btn" data-view="before">Before</button>
            <button class="control-btn" data-view="after">After</button>
            <button class="control-btn" data-view="hover">Hover to Reveal</button>
          </div>
        </div>
        
        <p class="seamless-text">
          While we do the heavy lifting, all you need to do is walk into your brand new space.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Process Section -->
  <section class="process-section">
    <div class="container">
      <div class="section-header right-aligned">
        <span class="section-number">04</span>
        <h2>Our Process</h2>
        <div class="section-line"></div>
      </div>
      
      <div class="process-intro">
        <p>Our systematic approach ensures every project is delivered with excellence, from the initial concept to the final handover.</p>
      </div>
      
      <div class="process-steps" id="process-steps-container">
        <!-- Process steps will be inserted here via JavaScript -->
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials-section">
    <div class="container">
      <div class="section-header centered">
        <span class="section-number">05</span>
        <h2>Client Stories</h2>
        <div class="section-line"></div>
      </div>
      
      <div class="testimonial-slider">
        <div class="testimonial-container">
          <% testimonials.forEach(function(testimonial, index) { %>
            <div class="testimonial-item <%= index === 0 ? 'active' : '' %>">
              <div class="testimonial-quote">"<%= testimonial.quote %>"</div>
              <div class="testimonial-author">- <%= testimonial.author %></div>
            </div>
          <% }); %>
        </div>
        
        <div class="testimonial-controls">
          <% testimonials.forEach(function(testimonial, index) { %>
            <div class="control-dot <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"></div>
          <% }); %>
        </div>
      </div>
    </div>
  </section>

  <!-- Call To Action Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Looking to elevate the aesthetic of your space?</h2>
        <p>Have a question or a project in mind? Let's talk and create something extraordinary.</p>
        <a href="mailto:<%= contact.email %>?subject=New%20Project" class="cta-button">
          <span>Contact Us</span>
          <i class="fas fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>

  <!-- Include Footer -->
  <%- include('partials/footer') %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/SplitText.min.js"></script>
  <script>
    // Verify GSAP loaded correctly
    console.log("GSAP loaded:", typeof gsap !== 'undefined');
    console.log("ScrollTrigger loaded:", typeof ScrollTrigger !== 'undefined');
    console.log("SplitText loaded:", typeof SplitText !== 'undefined');
  </script>
  <script src="/javascripts/script.js"></script>
  <script src="/javascripts/footer.js"></script>
</body>
</html>
